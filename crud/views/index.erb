<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.text %></td>
        <td>
          <a href="/posts/<%= post.id %>">Show</a>
        </td>
        <td>
          <a href="/posts/<%= post.id %>/edit">Edit</a>
        </td>
        <td>
          <form action="/posts/<%= post.id %>" method="POST">
            <input name="_method" type="hidden" value="DELETE" />
            <input type="submit" value="Destroy">
          </form>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<a href="/posts/new">New Post</a>
